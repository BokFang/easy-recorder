{
    "composite": true,
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "outDir": "dist/main",
        "rootDir": "src/main",
        "strict": true,
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/main"
    ],
    "exclude": [
        "src/renderer"
    ]
}